<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">


    <Button
        android:id="@+id/buttonGallery"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="75dp"
        android:layout_marginStart="66dp"
        android:background="@drawable/gallery"
        app:layout_constraintBottom_toTopOf="@+id/textGallery"
        app:layout_constraintEnd_toStartOf="@+id/buttonCamera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonCamera" />

    <Button
        android:id="@+id/buttonCamera"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="66dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonGallery"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonGroup"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="75dp"
        android:layout_marginStart="66dp"
        android:background="@drawable/group_management"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="66dp"
        android:background="@drawable/settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonGroup"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"
        android:text="@string/gallery"
        app:layout_constraintBottom_toBottomOf="@+id/textCamera"
        app:layout_constraintEnd_toEndOf="@+id/buttonGallery"
        app:layout_constraintTop_toBottomOf="@+id/buttonCamera" />

    <TextView
        android:id="@+id/textCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:text="@string/camera"
        app:layout_constraintEnd_toEndOf="@+id/buttonCamera"
        app:layout_constraintTop_toBottomOf="@+id/buttonCamera" />

    <TextView
        android:id="@+id/textGroupMag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:text="@string/group"
        app:layout_constraintEnd_toEndOf="@+id/textManagementMulti"
        app:layout_constraintTop_toBottomOf="@+id/buttonGroup" />

    <TextView
        android:id="@+id/textSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:text="@string/settings"
        app:layout_constraintEnd_toEndOf="@+id/buttonSettings"
        app:layout_constraintTop_toBottomOf="@+id/buttonSettings" />

    <Button
        android:id="@+id/logOut"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/logout"
        app:layout_constraintBottom_toTopOf="@+id/textLogOut"
        app:layout_constraintEnd_toEndOf="@+id/buttonSettings"
        app:layout_constraintStart_toStartOf="@+id/buttonSettings" />

    <TextView
        android:id="@+id/textLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="39dp"
        android:layout_marginStart="20dp"
        android:text="@string/log_out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/logOut" />

    <TextView
        android:id="@+id/textManagementMulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/managementText"
        app:layout_constraintStart_toStartOf="@+id/buttonGroup"
        app:layout_constraintTop_toBottomOf="@+id/textGroupMag" />

</android.support.constraint.ConstraintLayout>